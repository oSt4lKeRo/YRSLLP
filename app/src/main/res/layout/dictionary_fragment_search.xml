<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/dictionary_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="WordExample"
        android:textSize="32dp"
        android:textColor="@color/blue_text_dictionary"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="vertical"
        android:background="@color/backGround_dictionary_category_list"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dictionary_search_text"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="15dp"
        >

        <VideoView
            android:id="@+id/dictionary_search_video"
            android:layout_width="wrap_content"
            android:layout_height="250dp"

            android:layout_margin="15dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>